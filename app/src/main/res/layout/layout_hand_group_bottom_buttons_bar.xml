<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:id="@+id/llayout_bottom_buttons_bar"
    android:layout_height="wrap_content">
    <Button
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:enabled="false"
        android:textSize="14sp"
        android:id="@+id/btn_approve"
        android:textColor="#569556"
        android:background="@drawable/rec_normal_gray"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="同意结束"
        android:visibility="visible" />
    <!--android:drawableStart="@drawable/ic_approve"
        android:drawableLeft="@drawable/ic_approve"-->

    <Button
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="拒 绝"
        android:id="@+id/btn_reject"
        android:enabled="false"
        android:visibility="visible"
        android:textColor="#e94546"
        android:textSize="14sp"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@drawable/rec_normal_gray"/>
    <!--android:drawableStart="@drawable/ic_reject"
        android:drawableLeft="@drawable/ic_reject"-->

    <Button
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:visibility="gone"
        android:textSize="14sp"
        android:layout_weight="1"
        android:enabled="false"
        android:padding="@dimen/activity_horizontal_margin"
        android:textColor="#3a699b"
        android:id="@+id/btn_toother"
        android:background="@drawable/rec_normal_gray"
        android:text="撤销申请" />
    <!--android:drawableStart="@drawable/ic_cancel"
        android:drawableLeft="@drawable/ic_cancel"-->
    <Button
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:visibility="gone"
        android:layout_weight="1"
        android:textSize="14sp"
        android:enabled="false"
        android:padding="@dimen/activity_horizontal_margin"
        android:textColor="@color/background"
        android:id="@+id/btn_toother2"
        android:background="@drawable/rec_normal_cancelleave"
        android:text="(取消外出) 是" />
    <!--android:drawableStart="@drawable/ic_is"
        android:drawableLeft="@drawable/ic_is"-->
    <Button
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:visibility="visible"
        android:layout_weight="1"
        android:textSize="14sp"
        android:enabled="false"
        android:padding="@dimen/activity_horizontal_margin"
        android:textColor="#569556"
        android:id="@+id/btn_toother1"
        android:background="@drawable/rec_normal_gray"
        android:text="同意上报" />
    <!--android:drawableStart="@drawable/anew_new"
        android:drawableLeft="@drawable/anew_new"-->
    <Button
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="提 交"
        android:textSize="14sp"
        android:id="@+id/btn_start"
        android:enabled="false"
        android:visibility="gone"
        android:padding="@dimen/activity_horizontal_margin"
        android:textColor="#569556"
        android:background="@drawable/rec_normal_gray" />
    <!--android:drawableStart="@drawable/ic_start"
    android:drawableLeft="@drawable/ic_start"-->

    <Button
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:textSize="14sp"
        android:enabled="false"
        android:id="@+id/btn_save"
        android:textColor="#3a699b"
        android:background="@drawable/rec_normal_gray"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="退 回"
        android:visibility="visible" />
    <!--android:drawableLeft="@drawable/ic_transfer"
        android:drawableStart="@drawable/ic_transfer"-->
    <Button
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:textSize="14sp"
        android:enabled="false"
        android:id="@+id/btn_again"
        android:textColor="#569556"
        android:background="@drawable/rec_normal_gray"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="重新提交"
        android:visibility="gone" />
    <!--android:drawableLeft="@drawable/ic_start"
    android:drawableStart="@drawable/ic_start"-->

</LinearLayout>