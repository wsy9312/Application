<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/iv_empty"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:text="@string/app_name"
        android:textSize="20sp"
        android:layout_height="wrap_content" />

    <com.example.hgtxxgl.application.view.SimpleListView
        android:layout_below="@+id/notification_handtoolbar"
        android:layout_width="match_parent"
        android:id="@+id/viewpager_listview"
        android:divider="@null"
        android:smoothScrollbar="true"
        android:scrollbarSize="4dp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarThumbVertical="@drawable/rec_round_blue_dark"
        android:dividerHeight="1dp"
        android:layoutAnimation="@anim/list_item_in"
        android:fastScrollEnabled="false"
        android:choiceMode="singleChoice"
        android:headerDividersEnabled="true"
        android:footerDividersEnabled="true"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/mycommission_pb"
        android:visibility="invisible"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>