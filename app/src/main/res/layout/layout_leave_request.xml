<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:orientation="horizontal"
                android:background="@color/grey"/>
            <RelativeLayout
                android:id="@+id/rl_qrcode"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_titile_qrcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申请时间"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_margin="8dp"/>
                <ImageView
                    android:id="@+id/tv_message_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_qrcode"
                    android:layout_margin="8dp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:orientation="horizontal"
                android:background="@color/grey"/>
            <RelativeLayout
                android:id="@+id/rl_number"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_titile_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="外出时间"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_margin="8dp"/>
                <TextView
                    android:id="@+id/tv_message_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="000001"
                    android:layout_margin="8dp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:orientation="horizontal"
                android:background="@color/grey"/>
            <RelativeLayout
                android:id="@+id/rl_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_title_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="归来时间"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_margin="8dp"/>
                <TextView
                    android:id="@+id/tv_message_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="张三"
                    android:layout_margin="8dp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:orientation="horizontal"
                android:background="@color/grey"/>
            <RelativeLayout
                android:id="@+id/rl_soldier"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_titile_soldier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请假时数"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_margin="8dp"/>
                <TextView
                    android:id="@+id/tv_message_soldier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/shengrey"
                    android:layout_centerVertical="true"
                    android:text="165126"
                    android:layout_margin="8dp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:orientation="horizontal"
                android:background="@color/grey"/>
            <RelativeLayout
                android:id="@+id/rl_sex"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_title_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请假事由"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_margin="8dp"/>
                <TextView
                    android:id="@+id/tv_message_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/shengrey"
                    android:layout_centerVertical="true"
                    android:text="男"
                    android:layout_margin="8dp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:background="@color/grey">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textColor="@color/white"
                    android:text="提交"
                    android:enabled="false"
                    android:background="@color/mainColor_blue"
                    android:id="@+id/btn_submit"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="100dp"/>
                <!--android:foreground="?attr/selectableItemBackgroundBorderless"
                android:background="@drawable/selector_bg_login_button"-->
                <!--<Button
                    android:id="@+id/btn_logout"
                    android:text="退出当前账户"
                    android:textSize="16sp"
                    android:background="@color/mainColor_blue"
                    android:textColor="@color/colorWindowBackground"
                    android:layout_margin="30dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />-->
            </LinearLayout>
        </LinearLayout>
</LinearLayout>