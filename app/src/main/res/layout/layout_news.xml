<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_blue_ring_stroke"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="90dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="16sp"
            android:textColor="#333333"
            tools:text="这是新闻标题" />
        <TextView
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:paddingLeft="2dp"
            android:layout_below="@+id/tv_title"
            android:text="这是新闻概括这是新闻概括这新闻概括这新闻概括这新闻概括这新闻概括这新闻概括这新闻概括这新闻概括这是新闻概括这是新闻概括这是新闻概括这是新闻概括这是新闻概括这是新闻概括这是新闻概括这是新闻概括这是新闻概括这是新闻概括这是新闻概括"
            android:id="@+id/tv_sketch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="#0967AE"/>
        <TextView
            android:paddingLeft="2dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/tv_date"
            android:text="这是日期"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="0dp"
            android:ellipsize="end"
            android:lineSpacingExtra="5sp"
            android:textSize="13sp"
            android:textColor="#999999"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/image_news"
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:layout_margin="5dp"
        android:scaleType="fitXY"
        android:visibility="visible"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:layout_alignParentRight="true"/>

</LinearLayout>