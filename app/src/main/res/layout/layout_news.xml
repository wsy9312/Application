<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_change_bg"
    android:layout_marginBottom="8dp"
    android:padding="8dp" >

    <TextView
        style="@style/item_title"
        android:id="@+id/tv_title"
        android:layout_marginBottom="1dp"
        tools:text="我国手机用户数冲破13亿" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_none_picture_author"
        android:layout_below="@id/tv_title"
        tools:text="报道人：续写经典" />
    <TextView
        style="@style/item_title_subtitle"
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_title"
        android:layout_alignBottom="@id/item_none_picture_author"
        tools:text="2017-01-26 10:23" />

    <View
        style="@style/CommonDivider"
        android:id="@+id/item_none_picture_divider"
        android:layout_below="@id/item_none_picture_author"
        android:layout_marginTop="4dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/item_intro_long"
        android:id="@+id/tv_sketch"
        android:layout_below="@id/item_none_picture_divider"
        tools:text="2G用户正在加速向4G迁徙。2015年我国2G手机用户减少1.83亿户，是上年净减数的1.5倍，占手机用户的比重降至39.9%。与此同时，4G用户飞速增长。数据显示，2015年我国4G手机用户新增约2.89亿户，总数达3.86亿户，在手机用户中的渗透率达到29.6%。" />

    <ImageView
        android:id="@+id/item_single_picture"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="4dp"
        android:scaleType="fitXY"
        android:layout_below="@id/item_none_picture_author"
        />
   <!-- <LinearLayout
        android:id="@+id/item_multiple_picture"
        android:layout_below="@id/item_none_picture_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">-->
    <View
        android:id="@+id/strut"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:layout_below="@id/item_none_picture_author"
        android:id="@+id/item_multiple_picture_left"
        android:layout_height="120dp"
        android:layout_width="match_parent"
        android:layout_alignRight="@+id/strut"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"
        android:layout_marginRight="4dp"
        />
    <ImageView
        android:layout_below="@id/item_none_picture_author"
        android:id="@+id/item_multiple_picture_right"
        android:layout_height="120dp"
        android:layout_width="match_parent"
        android:layout_alignLeft="@+id/strut"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:layout_marginLeft="4dp"
        />

    <LinearLayout
        android:layout_below="@id/item_none_picture_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_three">
        <ImageView
            android:id="@+id/item_three_picture_left"
            android:layout_marginRight="8dp"
            android:layout_height="100dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            />
        <ImageView
            android:id="@+id/item_three_picture_middle"
            android:layout_marginRight="8dp"
            android:layout_height="100dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            />
        <ImageView
            android:id="@+id/item_three_picture_right"
            android:layout_height="100dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            />
    </LinearLayout>
  <!--  </LinearLayout>-->
</RelativeLayout>
