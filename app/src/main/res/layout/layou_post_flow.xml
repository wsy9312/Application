<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="9dp"
                android:layout_width="wrap_content"
                android:text="出勤休假"
                android:textColor="#000"
                android:textSize="16sp"
                android:layout_marginTop="6dp"
                android:drawablePadding="@dimen/post_flow_page_title_drawable_padding"
                android:layout_margin="20dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/post_flow_item_button_margin"
                android:layout_gravity="center_horizontal">
                <LinearLayout
                    android:id="@+id/but_hot1"
                    android:layout_margin="1dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_margin="9dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_flow_jb"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="我的待办"
                        android:layout_marginBottom="9dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/but_hot2"
                    android:layout_margin="1dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_margin="9dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_flow_qj"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="我启动的"
                        android:layout_marginBottom="9dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/but_hot3"
                    android:layout_margin="1dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:orientation="vertical">
                    <ImageView
                        android:src="@drawable/ic_flow_gc"
                        android:layout_margin="9dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"/>
                    <TextView
                        android:text="请假申请"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="9dp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>