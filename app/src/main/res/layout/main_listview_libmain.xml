<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/iv_empty"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:text="@string/app_name"
        android:textSize="20sp"
        android:layout_height="wrap_content" />

    <com.example.hgtxxgl.application.view.SimpleListView
        android:layout_width="match_parent"
        android:id="@+id/viewpager_listview"
        android:divider="@null"
        android:paddingLeft="@dimen/main_list_item_padding_inside"
        android:paddingRight="@dimen/main_list_item_padding_inside"
        android:smoothScrollbar="true"
        android:scrollbarSize="4dp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarThumbVertical="@drawable/rec_round_blue_dark"
        android:dividerHeight="@dimen/main_list_item_padding_inside"
        android:layoutAnimation="@anim/list_item_in"
        android:fastScrollEnabled="false"
        android:choiceMode="singleChoice"
        android:headerDividersEnabled="true"
        android:footerDividersEnabled="true"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/mycommission_pb"
        android:visibility="invisible"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/multiple_actions_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        fab:fab_addButtonColorNormal="@color/add1"
        fab:fab_addButtonColorPressed="@color/main_page_blue_light_pressed"
        fab:fab_addButtonPlusIconColor="@color/half_black"
        fab:fab_addButtonSize="normal"
        fab:fab_expandDirection="up"
        fab:fab_labelStyle="@style/menu_labels_style" >

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/button_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/main_page_blue_light_pressed"
            fab:fab_colorPressed="@color/main_page_blue_light_pressed"
            fab:fab_icon="@mipmap/ic_me"
            fab:fab_title="个人资料展示" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/blue_semi_transparent"
            fab:fab_colorPressed="@color/blue_semi_transparent_pressed"
            fab:fab_icon="@mipmap/ic_action_edit"
            fab:fab_title="请假外出申请" />
    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</RelativeLayout>