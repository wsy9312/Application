<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#0067AE">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:drawableLeft="@drawable/ic_arrow_left"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:text=""
            android:textSize="18sp"
            tools:visibility="visible"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItemSmall"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="单位态势"
            android:layout_toRightOf="@+id/tv_left"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/chart_toolbar_num1"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_zrs"
                android:layout_above="@+id/chart_toolbar_number1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="总人数"
                android:textColor="@color/gray_dark"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/chart_toolbar_number1"
                android:layout_alignParentBottom ="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="80"
                android:textColor="@color/gray_dark"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/chart_toolbar1"
                android:layout_alignParentBottom ="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/chart_toolbar_number1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="人"
                android:textColor="@color/gray_dark"
                android:textSize="13sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/driver1"
            android:layout_toRightOf="@+id/chart_toolbar_num1"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <View
                android:layout_width="0.5dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="0dp"
                android:background="@color/gray_dark"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/chart_toolbar_num2"
            android:layout_toRightOf="@+id/driver1"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_zwrs"
                android:layout_above="@+id/chart_toolbar_number2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="在位人数"
                android:textColor="@color/gray_dark"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/chart_toolbar_number2"
                android:layout_alignParentBottom ="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="75"
                android:textColor="@color/gray_dark"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/chart_toolbar2"
                android:layout_alignParentBottom ="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/chart_toolbar_number2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="人"
                android:textColor="@color/gray_dark"
                android:textSize="13sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/driver2"
            android:layout_toRightOf="@+id/chart_toolbar_num2"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <View
                android:layout_width="0.5dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="0dp"
                android:background="@color/gray_dark"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/chart_toolbar_num3"
            android:layout_toRightOf="@+id/driver2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_zwl"
                android:layout_above="@+id/chart_toolbar_number3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="在位率"
                android:textColor="@color/gray_dark"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/chart_toolbar_number3"
                android:layout_alignParentBottom ="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="80.03"
                android:textColor="@color/gray_dark"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/chart_toolbar3"
                android:layout_alignParentBottom ="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/chart_toolbar_number3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="%"
                android:textColor="@color/gray_dark"
                android:textSize="13sp" />
        </RelativeLayout>

    </RelativeLayout>
</FrameLayout>
