<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RadioGroup
        android:background="#fff"
        android:id="@+id/rg_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible"
        tools:visibility="visible"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <RadioButton
            android:gravity="center"
            android:id="@+id/rb_left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_check_tabs_blue_gray"
            android:button="@null"
            android:checked="true"
            android:textSize="16sp"
            android:padding="10dp"
            android:text="人员"
            android:textColor="@color/checked_blue_white" />

        <RadioButton
            android:background="@drawable/selector_check_tabs_blue_gray"
            android:gravity="center"
            android:id="@+id/rb_mid"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:checked="false"
            android:padding="10dp"
            android:text="车辆"
            android:textColor="@color/checked_blue_white" />

    </RadioGroup>
    <LinearLayout
        android:id="@+id/ll_et_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#fff"
        android:visibility="visible"
        android:focusableInTouchMode="false"
        android:orientation="horizontal">

        <android.support.v7.widget.SearchView
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/circle_round_white"
            android:ellipsize="start"
            android:layout_gravity="center_horizontal"
            android:foregroundGravity="center_horizontal|center"
            android:gravity="center"
            app:searchIcon="@drawable/ic_search"
            android:imeOptions="actionSearch"
            android:lines="1"
            app:queryHint="请输入搜索内容"
            android:maxLength="20"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:layout_width="match_parent"
            android:text="取消"
            android:layout_weight="6"
            android:id="@+id/tv_cancel"
            android:gravity="center"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/container"
        android:layout_height="match_parent">
    </FrameLayout>
</LinearLayout>