            android:enabled="false"
            android:id="@+id/rb_main_leave_launch_center"
            style="@style/BottomBarItem"
            android:text="人员查看" />-->
        <!--android:drawableTop="@drawable/home_page_radio_button_my_launch"-->
        <!--<RadioButton
            android:enabled="false"
            android:id="@+id/rb_main_leave_apply_car_center"
            style="@style/BottomBarItem"
            android:drawableTop="@drawable/home_page_radio_button_car_apply"
            android:text="车辆外出" />-->
        <RadioButton
            android:enabled="false"
            android:id="@+id/rb_main_leave_launch_total"
            style="@style/BottomBarItem"
            android:drawableTop="@drawable/home_page_radio_button_post_flow"
            android:text="申请事项" />

        <RadioButton
            android:enabled="false"
            android:id="@+id/rb_main_leave_todo_total"
            style="@style/BottomBarItem"
            android:drawableTop="@drawable/home_page_radio_button_post_personal"
            android:text="审批事项" />

    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#00000000"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_news"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_notif"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_start"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_todo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="invisible" />
    </LinearLayout>
