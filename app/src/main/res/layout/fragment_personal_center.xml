<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_qrcode"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3">
        <TextView
            android:id="@+id/tv_titile_qrcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="二维码名片"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"/>
        <ImageView
            android:id="@+id/tv_message_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_qrcode"
            android:layout_margin="8dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:background="@color/grey"/>
    <RelativeLayout
        android:id="@+id/rl_number"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_titile_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编号"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"/>
        <TextView
            android:id="@+id/tv_message_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="000001"
            android:layout_margin="8dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:background="@color/grey"/>
    <RelativeLayout
        android:id="@+id/rl_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"/>
        <TextView
            android:id="@+id/tv_message_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="张三"
            android:layout_margin="8dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:background="@color/grey"/>
    <RelativeLayout
        android:id="@+id/rl_soldier"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_titile_soldier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="军人证号"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"/>
        <TextView
            android:id="@+id/tv_message_soldier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/shengrey"
            android:layout_centerVertical="true"
            android:text="165126"
            android:layout_margin="8dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:background="@color/grey"/>
    <RelativeLayout
        android:id="@+id/rl_sex"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_title_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"/>
        <TextView
            android:id="@+id/tv_message_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/shengrey"
            android:layout_centerVertical="true"
            android:text="男"
            android:layout_margin="8dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/grey"/>
    <RelativeLayout
        android:id="@+id/rl_birth"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_title_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出生年月日"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"/>
        <TextView
            android:id="@+id/tv_message_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/shengrey"
            android:text="1998-03-10"
            android:layout_margin="8dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/grey"/>
    <RelativeLayout
        android:id="@+id/rl_nationality"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_title_nationality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名族"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"/>
        <TextView
            android:id="@+id/tv_message_nationality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/shengrey"
            android:text="汉"
            android:layout_margin="8dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/grey"/>
    <RelativeLayout
        android:id="@+id/rl_maritalstatus"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_title_maritalstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="婚姻状况"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"/>
        <TextView
            android:id="@+id/tv_message_maritalstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/shengrey"
            android:layout_centerVertical="true"
            android:text="已婚"
            android:layout_margin="8dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/grey"/>
    <RelativeLayout
        android:id="@+id/rl_joindate"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_title_joindate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="入伍时间"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"/>
        <TextView
            android:id="@+id/tv_message_joindate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/shengrey"
            android:layout_centerVertical="true"
            android:text="2015-5-25"
            android:layout_margin="8dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/grey"/>
    <RelativeLayout
        android:id="@+id/rl_militaryrank"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_title_militaryrank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="军衔"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"/>
        <TextView
            android:id="@+id/tv_message_militaryrank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/shengrey"
            android:layout_centerVertical="true"
            android:text="士兵"
            android:layout_margin="8dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/grey"/>
    <RelativeLayout
        android:id="@+id/rl_group"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_title_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分组"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"/>
        <TextView
            android:id="@+id/tv_message_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/shengrey"
            android:layout_centerVertical="true"
            android:text="二营三连一排五班"
            android:layout_margin="8dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/grey"/>
    <RelativeLayout
        android:id="@+id/rl_telnumber"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_title_telnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"/>
        <TextView
            android:id="@+id/tv_message_telnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/shengrey"
            android:layout_centerVertical="true"
            android:text="13856841155"
            android:layout_margin="8dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:background="@color/grey">
        <Button
            android:id="@+id/btn_logout"
            android:text="退出当前账户"
            android:textSize="16sp"
            android:background="@color/red"
            android:layout_margin="30dp"
            android:textColor="@color/colorWindowBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </LinearLayout>

</LinearLayout>