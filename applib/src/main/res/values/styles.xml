<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/main_black</item>
    </style>

    <style name="Main.Item.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/selector_gray_blue_corner_radius_5</item>
        <item name="android:layout_marginTop">@dimen/dimen_20</item>
        <item name="android:layout_marginLeft">@dimen/dimen_40</item>
        <item name="android:layout_marginRight">@dimen/dimen_40</item>
        <item name="android:theme">@style/text_style_main_white_16</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_50</item>
        <item name="android:paddingLeft">@dimen/dimen_20</item>
    </style>
    <style name="dialogstyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>



    <style name="tallerBarStyle" parent="@android:style/Widget.SeekBar" >
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@android:drawable/progress_horizontal</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_horizontal</item>
        <item name="android:minHeight">8dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>
    <style name="text_style_main_white">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/cffffff</item>
    </style>
    <style name="text_style_main_white_16" parent="@style/text_style_main_white">
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="line_style_h">
        <item name="android:background">@color/main_grey</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="text_style_main_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/main_black</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>
    <style name="text_style_main_black_16" parent="@style/text_style_main_black">
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>
    <style name="text_style_main_black_18" parent="@style/text_style_main_black">
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="dialog_waiting" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>
</resources>
