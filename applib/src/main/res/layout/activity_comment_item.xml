<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_5"
    android:background="@drawable/commentitem_bg"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_usernem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_35"
        android:layout_marginLeft="@dimen/dimen_10"
        android:gravity="center_vertical"
        android:text="@string/userName"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/dimen_16" />



    <TextView
        android:id="@+id/tv_comreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="5"
        android:paddingLeft="@dimen/dimen_10"
        android:paddingRight="@dimen/dimen_10"
        android:text="的点点滴滴多多多多多多多多多"
        android:textColor="@color/c808080"
        android:textSize="@dimen/dimen_16" />


    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_35"
        android:gravity="right|center_vertical"
        android:paddingRight="@dimen/dimen_10"
        android:text="time"
        android:textColor="@color/cff9037"
        android:textSize="@dimen/dimen_16" />

</LinearLayout>