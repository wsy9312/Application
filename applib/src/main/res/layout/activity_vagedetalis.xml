<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cffffff"
    android:orientation="vertical">

    <include layout="@layout/activity_title" />


    <ImageView
        android:id="@+id/im_image"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/err_image" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_35"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/vegename"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_5"
            android:text=""
            android:textColor="@color/c000"
            android:textSize="@dimen/dimen_16" />

        <ImageView
            android:id="@+id/im_giveup"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dimen_5"
            android:src="@drawable/give_up_false" />

        <TextView
            android:id="@+id/tv_give"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dimen_5"
            android:gravity="center_vertical"
            android:text="0"
            android:textColor="@color/c808080" />


        <ImageView
            android:id="@+id/im_comment"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dimen_5"
            android:src="@drawable/comment" />

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dimen_15"
            android:gravity="center_vertical"
            android:text="0"
            android:textColor="@color/c808080"
            android:textSize="@dimen/dimen_16" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:background="@color/cefefef" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
