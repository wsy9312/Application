<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_10"
    android:layout_marginRight="@dimen/dimen_10"
    android:layout_marginTop="6dp"
    android:background="@drawable/vage_item_bg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/im_image"
            android:layout_width="@dimen/dimen_120"
            android:layout_height="@dimen/dimen_90"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_10"
            android:src="@drawable/err_image" />

        <View
            android:layout_width="@dimen/dimen_1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_2"
            android:layout_marginTop="@dimen/dimen_2"
            android:background="@color/cefefef" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="name"
                    android:textColor="@color/c000"
                    android:textSize="@dimen/dimen_20" />

                <TextView
                    android:id="@+id/tv_meunestatus"
                    android:layout_width="@dimen/dimen_30"
                    android:layout_height="@dimen/dimen_30"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:background="@drawable/major_meun_bg"
                    android:gravity="center"
                    android:text="主"
                    android:textColor="@color/c7387df"
                    android:textSize="@dimen/dimen_20"
                    android:visibility="gone" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_details"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="3"
                    android:text="描述"
                    android:textColor="@color/c808080"
                    android:textSize="@dimen/dimen_15" />


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:background="@color/cefefef" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_35"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />


        <ImageView
            android:id="@+id/im_give"
            android:layout_width="@dimen/dimen_25"
            android:layout_height="@dimen/dimen_25"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dimen_10"
            android:src="@drawable/vote_false" />

        <TextView
            android:id="@+id/tv_give"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dimen_10"
            android:gravity="center_vertical"
            android:text="0"
            android:textColor="@color/c808080"
            android:textSize="@dimen/dimen_16" />



    </LinearLayout>


</LinearLayout>